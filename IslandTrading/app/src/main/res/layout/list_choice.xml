<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:text="小红"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:text="15232127777"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/lv_name2"
        android:text="[默认]"
        android:textColor="#ff5722"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_chioce_addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_name2"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:text="河北省石家庄市南二环东路20号\t河北师范大学新校区"
        android:textSize="18sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/list_chioce_addres"
        android:background="#D0D0D0" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:drawableLeft="@mipmap/delete"
        android:text="删除"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginBottom="10dip"
        android:layout_toLeftOf="@+id/delete"
        android:drawableLeft="@mipmap/editor"
        android:text="编辑"
        android:textSize="18sp" />

</RelativeLayout>