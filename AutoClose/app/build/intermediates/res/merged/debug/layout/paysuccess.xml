<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include
        android:id="@+id/dingdan_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/title_layout" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dingdan_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="你的订单支付成功"
        android:textColor="#CC0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/paysuccess_time"
        android:layout_alignBottom="@+id/paysuccess_time"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="18dp"
        android:text="秒钟后自动关闭" />

    <TextView
        android:id="@+id/paysuccess_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toLeftOf="@+id/textView3"
        android:text="0" />

    <ImageView
        android:id="@+id/paysuccess_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       android:src="@drawable/man" />

</RelativeLayout>
